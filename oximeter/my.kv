<CreateAccountWindow>:
    name: "create"
    namee: namee
    password: passw

    FloatLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'cabg.jpg'

        Label:
            size_hint: 0.56,0.12
            pos_hint: {"x":0, "top":0.65}
            text: "Name: "
            font_size:20
            color: 0.66,0.56,0.17
            bold:True
            italic:True

        TextInput:
            pos_hint: {"x":0.42, "top":0.63}
            size_hint: 0.4, 0.07
            font_size: 20
            id: namee
            multiline: False

        Label:
            size_hint: 0.56,0.12
            pos_hint: {"x":0, "top":0.55}
            text: "Password: "
            font_size:18
            color: 0.66,0.56,0.17
            bold:True
            italic:True

        TextInput:
            pos_hint: {"x":0.42, "top":0.53}
            size_hint: 0.4, 0.07
            font_size: 25
            id: passw
            multiline: False
            password: True

        Button:
            pos_hint:{"x":0.17,"y":0.36}
            size_hint: 0.26, 0.07
            font_size: 15
            text: "Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.28}
            size_hint: 0.2, 0.075
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
            Image:
                source:'submit.jpg'
                center_x:self.parent.center_x
                center_y:self.parent.center_y


